<project>

	<description>external software locations</description>

	<!-- top-level location for external software -->
	<property name="external" location="external" />

	<!-- ant: tasks and launcher for sub-builds -->
	<property name="ant.home" location="${external}/apache-ant" />
	<property name="ant.jar" location="${ant.home}/lib/ant.jar" />
	<property name="ant-junit.jar" location="${ant.home}/lib/ant-junit.jar" />
	<property name="ant-launcher.jar"
	          location="${ant.home}/lib/ant-launcher.jar" />

	<!-- junit: unit testing code -->
	<property name="junit.home" location="${external}/junit" />
	<property name="junit.jar" location="${junit.home}/junit-4.5.jar" />
	<!-- this is included in external but may be separated out -->
	<property name="hamcrest.jar" location="${junit.home}/junit-4.5.jar" />

	<!-- javacc: java compiler compiler for generating pan parser -->
	<property name="javacc.home" location="${external}/javacc" />

	<!-- jcip: annotations of threading behavior -->
	<property name="jcip.home" location="${external}/jcip-annotations" />
	<property name="jcip.jar"
	          location="${jcip.home}/lib/jcip-annotations.jar" />

	<!-- findbugs: static analysis of code -->
	<property name="findbugs.home" location="${external}/findbugs" />
	<property name="findbugs.jar"
	          location="${findbugs.home}/lib/findbugs.jar" />
	<property name="findbugs-ant.jar"
	          location="${findbugs.home}/lib/findbugs-ant.jar" />
	<property name="findbugs.annotations.jar"
	          location="${findbugs.home}/lib/annotations.jar" />
	<property name="findbugs.jsr305.jar"
	          location="${findbugs.home}/lib/jsr305.jar" />

	<!-- fop: apache formatter -->
	<property name="fop.home" location="${external}/fop" />
	<!-- the commons libraries may be separate... -->
	<property name="fop.commons-logging.home" location="${external}/fop/lib" />
	<property name="fop.commons-io.home" location="${external}/fop/lib" />
	<property name="fop.jar" location="${fop.home}/build/fop.jar" />

	<!-- offo: hyphenation rule to use when formatting docbook output -->
	<property name="offo.home" location="${external}/offo-hyphenation-fop" />
	<property name="offo.fop-hyph.jar" location="${offo.home}/fop-hyph.jar" />

	<!-- saxon: XSLT v1 processor for docbook processing --> 
	<property name="saxon.home" location="${external}/saxon6-5-5" />
	<property name="saxon.jar" location="${saxon.home}/saxon.jar" />

	<!-- docbook: docbook stylesheet location -->
	<property name="docbook.home" location="${external}/docbook-xsl-ns" />

	<!-- CLASSPATHS -->

	<!-- create fop classpath -->
	<path id="classpath.fop">
		<pathelement location="${fop.jar}" />
		<fileset dir="${fop.home}/lib">
			<include name="avalon-framework-*.jar" />
			<include name="batik-all-*.jar" />
			<include name="xmlgraphics-commons-*.jar" />
			<include name="xml-apis-*.jar" />
		</fileset>
		<fileset dir="${fop.commons-logging.home}">
			<include name="commons-logging-*.jar" />
		</fileset>
		<fileset dir="${fop.commons-io.home}">
			<include name="commons-io-*.jar" />
		</fileset>
		<pathelement location="${offo.fop-hyph.jar}" />
	</path>

	<!-- compilation path -->
	<path id="compile.classpath">
		<pathelement path="${junit.jar}" />
		<pathelement path="${hamcrest.jar}" />
		<pathelement path="${ant.jar}" />
		<pathelement path="${jcip.jar}" />
		<pathelement path="${findbugs.annotations.jar}" />
		<pathelement path="${findbugs.jsr305.jar}" />
	</path>

	<!-- javadoc path (reuse compilation classpath) -->
	<path id="javadoc.classpath" refid="compile.classpath" />


</project>
